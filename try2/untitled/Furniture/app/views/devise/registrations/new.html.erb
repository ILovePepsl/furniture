<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-container' }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :currency, "Preferred Currency" %><br />
    <%= f.select :currency, options_for_select([['Ukrainian Hryvnia (UAH)', 'UAH'], ['US Dollar (USD)', 'USD'], ['Euro (EUR)', 'EUR']]) %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<div class="links">
  <%= link_to 'Sign up as Manufacturer', new_manufacturer_registration_path, class: 'manufacturer-link' %>
  <%= render "devise/shared/links" %>
</div>
